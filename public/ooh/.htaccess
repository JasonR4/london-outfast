# Ensure correct MIME types
<IfModule mod_mime.c>
  AddType application/xml .xml
  AddType text/plain .txt
</IfModule>

# Prevent SPA rewrite for sitemaps, robots, and static assets
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Wildcard 301 to main domain, preserve path and query
  RewriteCond %{HTTP_HOST} ^ooh\.mediabuyinglondon\.co\.uk$ [NC]
  RewriteRule ^(.*)$ https://mediabuyinglondon.co.uk/$1 [R=301,L,QSA]

  # Redirect AMP to canonical root
  RewriteRule ^amp(/.*)?$ / [R=301,L]

  # Serve existing files/directories as-is
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Do NOT rewrite these extensions (allow direct serving)
  RewriteCond %{REQUEST_URI} \.(xml|txt|ico|png|jpg|jpeg|gif|webp|svg|css|js|map|json|woff|woff2|ttf|eot|pdf)$ [NC]
  RewriteRule ^ - [L]

  # SPA fallback for everything else
  RewriteRule . /index.html [L]
</IfModule>
